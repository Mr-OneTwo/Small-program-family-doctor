/* 以下是内容页 */
.box_fa{
  position:fixed;
  top:185rpx;
  padding-top:10rpx;
  width:100%;
  overflow:auto;
  bottom:0;
}

.nav {
  position: fixed;
  right: 10rpx;
  top: 190rpx;
  bottom:20px;
  width: 50rpx;
