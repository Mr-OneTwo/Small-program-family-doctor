@import "/wxSearch/wxSearch.wxss";
.fixed_fa{
  position:fixed;
  width:100%;
  z-index:99;
}

/* 以下是选项卡 */
 .search_fa{
  width:100%;
  background:#F5F5F5;
 }
.scroll-view_H{
