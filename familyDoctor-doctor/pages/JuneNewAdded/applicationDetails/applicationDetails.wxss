/* pages/tohomeRecode/tohomeRecode.wxss */
page{
  padding-bottom:100rpx;
}
.conlumn{margin-top: 20rpx; background-color: #fff; padding: 0 24rpx;}
.conlumn .list{padding:24rpx; display: flex;align-items:center;border-bottom:1rpx solid #ebebeb;}
.conlumn .list .title{min-width: 240rpx;}
.conlumn .list .infor{
  flex: 1;
  text-align:right;
  color: #777;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space : nowrap; 
}
.conlumn .list .infor>.little{
  color:#999;font-size:22rpx;line-height:30rpx;margin-bottom:8rpx;
}
.conlumn .list .infor>.big{
  color:#333;
}
.btn{
  width:100%;
  line-height:90rpx;
  font-size:28rpx;
  position:fixed;
  bottom:0;
  border-top:1rpx solid #02CAAD;
  display:flex;
  z-index:99;
}
.yes,.no{
  flex:1;
}
.yes{
  background:#02CAAD;
  color:white;
  text-align:center;
}
.marginright{
  margin-right:15rpx;
}