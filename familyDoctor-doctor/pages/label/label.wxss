/* pages/label/label.wxss */

.label_fa{
  background:#fff;
  padding:30rpx 24rpx;
  border-top:1rpx solid #ebebeb;
}
.label_fa view{
  display:inline-block;
  padding:10rpx 30rpx;
  background:#F3F7F6;
  color:#666;
  margin:12rpx 15rpx;
  border-radius:50rpx;
}
.label_fa .active{
  background:#02CAAD;
  color:#fff;
}

.btn{
  width:70%;
  height:85rpx;
  background:#3CD5C0;
  color:white;
  border-radius:50rpx;
  margin:80rpx auto 0;
  line-height:85rpx;
}

.btn_hover{
  background:#34AD9D;
}