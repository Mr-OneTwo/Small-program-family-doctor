/* pages/personal/personal.wxss */
.top{
  width:100%;
  height:150rpx;
  position:relative;
  overflow:hidden;}
.doctor{
  width:80rpx;
  position:absolute;
  top:35rpx;
  border-radius:50%;
  left:35rpx;}
.bac{
  width:100%;
  position:absolute;
  z-index:-1;}
.right{
  position:absolute;
  left:135rpx;
  right:24rpx;
  top:35rpx;
  bottom:35rpx;}
.name{
  font-size:30rpx;
  color:#333;}
.name>.work{
  font-size:26rpx;
  color:#666;
  margin-left:10px;}
.address{
  font-size:26rpx;
  color:#666;
  line-height:40rpx;}
.address, .name{
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
  /* 第二部分数据 */
.data{
  width:100%;
  height:140rpx;
  background:#fff;
  border-bottom:1px solid #E9E9EB;
  display:flex;
  flex-direction:row;
  }
  .data .fir{
    flex:1;
    height:100%;
    text-align:center;
  }
  .data .num{
    font-size:34rpx;
    color:#37D3BD;
    line-height:40rpx;
    margin-top:30rpx;
  }
  .data .oth{
    color:#333;
    font-size:28rpx;
  }
/* 列表 */
.list_personal{
  width:100%;
  border-bottom:1px solid #E9E9EB;
  background:#fff;
  margin-top:24rpx;
}
.li{
  padding-left:24rpx;
}
.bord{
  border-bottom:1px solid #E9E9EB;
  width:100%;
  height:88rpx;
  display:flex;
  align-items:center;
  }
.no_border{
  border-bottom:1px solid transparent;
}
.li_img{
  width:40rpx;
  margin:0 18rpx;
}
.li_text{
  color:#333;
  font-size:28rpx;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
  padding-right:24rpx;
  flex:1;
}

.btn{
  width:70%;
  height:85rpx;
  background:#3CD5C0;
  color:white;
  border-radius:50rpx;
  margin:80rpx auto 0;
  line-height:85rpx;
  text-align:center;
}