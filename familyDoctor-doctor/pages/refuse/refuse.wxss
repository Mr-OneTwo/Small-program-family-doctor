/* pages/refuse/refuse.wxss */
page{
  padding-bottom:98rpx;
}
.txt{
 padding:24rpx;
 background:#fff;
 border-top:1rpx solid #ebebeb;
 margin-bottom:24rpx;
}
.name{
  color:#333;
  font-size:30rpx;
  font-weight:bold;
}
.time,.describe{
  color:#777;
  font-size:26rpx;
}
.li{
  display:flex;
  padding:0 24rpx;
  height:88rpx;
  align-items:center;
  background:#fff;
  border-bottom:1rpx solid #ebebeb;
}
.li_ano{
  display:flex;
  padding:24rpx;
  align-items:center;
  background:#fff;
  border-bottom:1rpx solid #ebebeb;
}
.refuse{
  width:150rpx;
}
.choose{
  flex:1;
  padding-right:24rpx;
  text-align:right;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
  line-height:88rpx;
  color:#777;
}
.input{
  flex:1;
  padding-right:24rpx;
}
.input_fa{
  width:100%;
  color:#777;
}
.picker{
  color:#777;
}
/* 底部按钮 */
.btn{
  width:100%;
  line-height:90rpx;
  font-size:28rpx;
  position:fixed;
  bottom:0;
  border-top:1rpx solid #02CAAD;
  display:flex;
  z-index:99;
}
.yes,.no{
  flex:1;
}
.yes{
  background:#02CAAD;
  color:white;
  text-align:center;
}
.no{
  background:#fff;
  color:#02CAAD;
  text-align:center;
}