/* pages/gotohome/gotohome.wxss */
.top{
  display:flex;
  height:88rpx;
  justify-content:space-between;
  padding:0 24rpx;
  align-items:center;
  border-top:1rpx solid #DEDDE3;
}
.tit,.how{
  white-space:nowrap;
  text-overflow:ellipsis;
  overflow:hidden;
}
/* 列表 */
.li{
  background:#fff;
  padding:24rpx;
  border-top:1rpx solid #ebebeb;
  display:flex;
  align-items:center;
}
.right{
  width:20%;
  color:#777;
  text-align:right;
  padding-right:20rpx;
  box-sizing:border-box;
  font-size:24rpx;
}
.txt{
  width:80%;
}
.describe,.time{
  color:#777;
  font-size:24rpx;
}
.name{
  font-size:30rpx;
  color:#333;
  font-weight:bold;
}
.describe,.time,.name,.right{
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
