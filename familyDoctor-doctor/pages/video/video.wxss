/* pages/video/video.wxss */
.win{
  position:absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
  background:#000;
  color:#fff;
}
.portrait{
  width:120rpx;
  height:120rpx;
  margin:0 24rpx;
  border-radius:15rpx;
}
.infor{
  height:150rpx;
  display:flex;
  align-items:center;
}
.name{
  font-size:38rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:1; 
}
.cen{
  width:100%;
  text-align:center;
  margin:24rpx 0;
}
.close_phone{
  width:100%;
}
.bottom{
  position:absolute;
  bottom:0;
  width:100%;
  display:flex;
  justify-content:space-around;
}
.around{
  flex:1;
}

/* _videoing样式 */


.time{
  text-align:center;
  margin-bottom:40rpx;
}

.bottom_videoing{
  width:100%;
  position:absolute;
  bottom:10rpx;
  z-index: 999;
}
.btns{
  display:flex;
  justify-content:space-around;
}
.button{
  flex:1;
}
.circle{
  width:120rpx;
  height:120rpx;
  margin:0 auto;
  display:flex;
  align-items:center;
  justify-content:center;
}
.word{
  text-align:center;
  font-size:22rpx;
  margin:24rpx 0;
}
.circle_img{
  width:100%;
}

.disappear{
  display:none;
}
.img{
  width:100%;
  height:100%;
}

.main,.video_me{
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background:#000;
    overflow:hidden;
}
.small,.video_doctor{
    width:200rpx;
    height:340rpx;
    background:gray;
    position:absolute;
    right:10rpx;
    top:10rpx;
    z-index:999;
    overflow:hidden;
}